kind: Service
apiVersion: v1
metadata:
  name: helidon-atp
  labels:
    app: helidon-atp
spec:
  type: NodePort
  selector:
    app: helidon-atp
  ports:
  - port: 8080
    targetPort: 8080
    nodePort: 31080
    name: http
---
kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: helidon-atp
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: helidon-atp
        version: v1
    spec:
      containers:
      - name: helidon-atp
        image: ${DOCKER_SERVER}/${DOCKER_REPO}/helidon-atp
        env:
        - name: javax.sql.DataSource.codetokyo.dataSource.url
          value: ${DATASOURCE_URL}
        - name: javax.sql.DataSource.codetokyo.dataSource.user
          value: ${DATASOURCE_USER}
        - name: javax.sql.DataSource.codetokyo.dataSource.password
          value: ${DATASOURCE_PASSWORD}
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
      imagePullSecrets:
      - name: ocirsecret
---
